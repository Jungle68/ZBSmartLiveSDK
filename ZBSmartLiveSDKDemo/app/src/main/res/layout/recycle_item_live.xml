<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tool="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:background="@color/white"
             android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_live_item_cover"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:scaleType="centerCrop"/>

        <ImageView
            android:id="@+id/iv_live_item_black_cover"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:background="@mipmap/ico_shade_cover"
            android:visibility="gone"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="7dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/iv_live_item_shape"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ico_people"/>

            <TextView
                android:id="@+id/tv_live_item_user_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:textColor="@color/white"
                android:textSize="11sp"
                tool:text="12"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_live_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_live_item_cover"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="7dp"
            android:textSize="15sp"
            tool:text="望利鸟在成功给接口给大家送顾客"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@+id/iv_live_item_cover"
            >

            <TextView
                android:id="@+id/tv_live_item_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="57dp"
                android:layout_marginTop="10dp"
                android:textColor="#000000"
                android:textSize="13sp"
                tool:text="小妹妹"/>

        </RelativeLayout>

        <ImageView
            android:id="@+id/iv_live_item_user_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignBottom="@+id/iv_live_item_cover"
            android:layout_marginBottom="-32dp"
            android:layout_marginLeft="12dp"

            android:src="@mipmap/pic_touxiang_150"/>

        <ImageView
            android:id="@+id/iv_live_item_verified"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_alignBottom="@+id/iv_live_item_user_icon"
            android:layout_alignRight="@+id/iv_live_item_user_icon"
            android:layout_marginRight="5px"
            android:layout_marginBottom="3px"
            android:background="@mipmap/ico_certified_02"
            android:visibility="gone"
            />

        <ImageView
            android:id="@+id/iv_live_item_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_live_item_location"
            android:layout_marginLeft="7dp"
            android:layout_marginBottom="1dp"
            android:background="@mipmap/ico_address"/>

        <TextView
            android:id="@+id/tv_live_item_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/iv_live_item_location"
            android:textSize="11sp"
            tool:text="乌鲁木齐"/>

    </RelativeLayout>

</FrameLayout>