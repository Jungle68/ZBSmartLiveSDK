<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zhiyicx.zhibo.zbsmartlivesdkdemo.activity.Live.WatchLiveActivity">

    <com.zhiyicx.zhibosdk.widget.ZBVideoView
        android:id="@+id/zv_live_play_player"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="48dp"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/lv_chat"
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:layout_above="@+id/ll_send_msg"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="48dp">

    </android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:id="@+id/ll_send_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_send_msg"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/bt_send"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="发送"/>
    </LinearLayout>

</RelativeLayout>
